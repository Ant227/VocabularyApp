<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickVocabularyActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/click_vocabulary_profile_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/click_vocabulary_profile"
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitCenter"
            android:textSize="28dp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/click_vocabulary_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_extra_condensed_medium_italic"
                android:padding="1dp"
                android:text="User name"
                android:textColor="@color/colorText"
                android:textSize="12dp"

                />

            <TextView
                android:id="@+id/click_vocabulary_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_extra_condensed_medium_italic"
                android:padding="1dp"
                android:text="Book name"
                android:textColor="@color/colorText"
                android:textSize="12dp"

                />

            <TextView
                android:id="@+id/click_vocabulary_word_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_extra_condensed_medium_italic"
                android:padding="1dp"
                android:text="0/0"
                android:textColor="@color/colorText"
                android:textSize="12sp"

                />

        </LinearLayout>

        <ImageView
            android:id="@+id/click_vocabulary_setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:src="@drawable/setting_icon" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/click_vocabulary_vocabulary"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/fira_sans_extra_condensed_medium_italic"
                    android:text="Vocabulary"
                    android:drawableLeft="@drawable/sound"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/word_ripple_effect"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/check"/>

                </RelativeLayout>

            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorYellow"
                android:text="Dict"
                android:textStyle="bold|italic"
                android:background="@color/colorBlack"
                android:fontFamily="@font/fira_sans_extra_condensed_medium_italic"/>
            <TextView
                android:id="@+id/click_vocabulary_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="meaning here"
                android:textColor="#00000C"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingLeft="20sp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp"

                />

            <!--line-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EFEFEF"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorYellow"
                android:text="Use case"
                android:textStyle="bold|italic"
                android:background="@color/colorBlack"
                android:fontFamily="@font/fira_sans_extra_condensed_medium_italic"/>

            <TextView
                android:id="@+id/click_vocabulary_book_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="examples here"
                android:lineSpacingExtra="4dp"
                android:textColor="#00000C"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingLeft="20sp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp"

                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/click_vocabulary_button_layout"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/click_vocabulary_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/click_vocabulary_back_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:elevation="6dp"
            android:layout_below="@id/register_input_text_group"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/fira_sans_extra_condensed_medium_italic"
            android:text="Back"
            android:textColor="@color/colorText"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/click_vocabulary_next_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:elevation="6dp"
            android:layout_below="@id/register_input_text_group"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/main__activity_register_button"
            android:fontFamily="@font/fira_sans_extra_condensed_medium_italic"
            android:text="Next"
            android:textColor="@color/colorText"
            android:layout_margin="4dp"/>


    </LinearLayout>


</RelativeLayout>








</LinearLayout>