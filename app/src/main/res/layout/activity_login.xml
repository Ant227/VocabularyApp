<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="54dp"
            android:layout_height="64dp"
            android:src="@drawable/app_logo"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_intro_description"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:lineSpacingExtra="22dp"
            android:textColor="@color/colorTextView"
            />



        gmail
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:textColorHint="@color/colorTextlight"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:padding="8dp"
                android:hint="gmail"
                android:textColor="@color/colorText"
                android:backgroundTint="@color/colorBlack"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>
        password
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/colorTextlight"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorText"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:padding="8dp"
                android:hint="password"
                android:textColor="@color/colorText"
                android:backgroundTint="@color/colorText"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:onClick="loginAccount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/register_input_text_group"
            android:textAllCaps="false"
            android:text="Login"
            android:textColor="@color/colorText"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/main__activity_register_button"/>


    </LinearLayout>



</RelativeLayout>